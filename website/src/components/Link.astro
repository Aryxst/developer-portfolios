---
import type { HTMLAttributes } from 'astro/types';
import { tv } from 'tailwind-variants';
import { buttonStyles } from './Button.astro';
export interface Props extends HTMLAttributes<'a'> {
 type?: keyof typeof linkVariants.variants.type;
}

export const linkVariants = tv({
 variants: {
  type: {
   button: buttonStyles(),
  },
 },
});

const { href, type, ...attrs } = Astro.props;
---

<a class:list={[linkVariants({ type }), attrs.class]} {href} {...attrs}><slot /></a>
